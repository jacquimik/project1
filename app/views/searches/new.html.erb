<h1>New Search</h1>

<div class="checkbox">
<%= form_tag(searches_path, method: :post) do %>
  Categories: <br/>
  <ul>
  <% Category.all.each do |category| %>
    <li class="item"><%= check_box_tag "searches[category_ids][]", category.id, false, id: dom_id(category) %>
    <%= label_tag dom_id(category), category.name %></li><br>
  <% end %>
</ul>
</div>
  <input type='submit' value='Submit'>
<% end %>
