<h2>
  Editing
  <%= @user.name %>
</h2>

<div class="edit-user ol-xs-6">
  <%= form_for @user do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <br>
    <div class="button-edit">
      <%= f.submit class: "btn btn-default" %>
    <% end %>
  </div>
</div>