<div class="showclothes">
	<h2 class="item-name"><%= @item.name %></h2>
	    <div class="col-md-6">
				<p>
					<img src="<%= @item.image_url %>">
				</p>
			</div>
				<div class="col-md-6">
				<p class="item-desc">
					<%= @item.description %>
				</p>
			</div>
			<%= link_to 'Edit', edit_item_path(@item) %>
			<%= link_to 'Delete', @item, :method => :delete, :data => { :confirm => 'Are you sure?' } %>
			</div>
		</div>
	</div>